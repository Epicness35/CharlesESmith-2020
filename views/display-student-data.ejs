         <tr>
           <td><%= dt.ticket %></td>
           <td><%= dt.sID %></td>
           <td><%= dt.first %></td>
           <td><%= dt.middle %></td>
           <td><%= dt.last %></td>
           <td><%= dt.grade %></td>
           <td><%= dt.guest %></td>
         </tr>
         <% }) %>
       </table>

       <button onclick="exportTableToCSV('tickets.csv')">Export HTML Table To CSV File</button>
     </div>
   </div>
 </div>
